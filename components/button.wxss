.btn {
  position: relative;
  display: inline-block;
  margin-top: .5rem;
  border: 0;
  text-align: center;
  text-transform: uppercase;
  max-width: 320rpx;
}

.btn-filled {
  background: var(--primary-color);
  color: var(--white);
}

.btn-unfilled {
  border: 4rpx var(--primary-color) solid;
  color: var(--primary-color);
}

.booking-button {
  display: inline-block;
  position: absolute;
  bottom: 0;
  left: 0;
  margin: 0;
  font-size: 28rpx;
}

.booking-button-going {
    background-color: var(--accent-color);
}

.booking-button-attend {
    background-color: var(--primary-color);
}