
.avatar {
    border-radius: 50%;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }
  
  .user-avatar{
      width: 192rpx;
      height: 192rpx;
      margin: .5rem auto;
  }
  
  .avatar-bordered {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    box-shadow: 0 1px 2px rgba(0,0,0,0.2);
    border: 1px solid var(--white);
  }
  
  .avatar-bordered:not(:first-child){
      margin-left: -0.6em;
  }
  