.banner {
  overflow: hidden;
  height: 386rpx;
  margin-bottom: .75rem;
  background-color: linear-gradient(180deg, rgba(0, 0, 0, 0.17) 0%, rgba(28, 2, 40, 0.83) 100%);
  background-position: center;
  background-size: cover;
  background-repeat: no-repeat;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: var(--white);
  font-size: .85rem;
}

.banner-dark::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 386rpx;
  background: linear-gradient(180deg, rgba(0, 0, 0, 0.17) 0%, rgba(0, 0, 0, 0.83) 100%);
}

.banner text {
  z-index: 3;
}

.title {
  text-transform: capitalize;
  font-size: 1.8rem;
}