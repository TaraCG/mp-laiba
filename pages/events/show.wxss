/* pages/pages/show.wxss */
.container {
  display: flex;
  flex-direction: column;
}

.info {
  flex-direction: column;
  padding: 20rpx auto;
}

.details {
  margin-bottom: .5rem;
}
.details-img {
  width: 3rem;
  margin-right: .5rem;
}

.details-text {
  display: flex;
  flex-direction: column;
}

.label {
  color: #333;
  margin-bottom: 4px;
  text-emphasis: left;
}

.value {
  font-size: 16px;
  color: #666;
  text-emphasis: left;
}