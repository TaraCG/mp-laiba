/* pages/user/profile.wxss */
.user {
  margin-top: 1em;
  margin-bottom: .5em;
  border-radius: 0 0 20rpx 20rpx;
  box-shadow: 0px 10px 35px rgba(87, 92, 138, 0.05);
}

.stats {
    margin-bottom: 1.2em;
}

.item {
  padding: 0 2em;
}

.item:first-of-type {
  border-right: 2rpx solid var(--grey-light);
}

.posted-events{
    margin-bottom: 1.2em;
}

.attendees {
    position: absolute;
    bottom: 2%;
}

.attendees text {
    color: var(--accent-color-blue);
    font-weight: 700;
    font-size: .8rem;
    margin-left: 1em;
}

.for-hire {
  background-color: var(--white);
  border-radius: 20rpx;
  padding: 1em;
  margin-bottom: 1.2em;
  text-align: center;
}

.card-info,
.card-info-hor {
    overflow: hidden;
}

.card-info .h3,
.card-info .card-address,
.card-info-hor .h3,
.card-info-hor .card-address 
{
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}